# Xano Backend
XANO_API_URL="https://your-workspace.xano.io/api:YOUR_API_ID"
XANO_API_KEY=""  # API key for endpoint auth (must also be set as API_KEY env var in Xano)
XANO_AUTH_TOKEN=""

# AI Provider Configuration
# Options: anthropic, openai, google
AI_PROVIDER="anthropic"

# API Keys (only need the one for your selected provider)
ANTHROPIC_API_KEY=""    # For Anthropic Claude
OPENAI_API_KEY=""       # For OpenAI GPT-4
GOOGLE_AI_API_KEY=""    # For Google Gemini

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_TO="recipient@example.com"

# Reddit API (optional - for higher rate limits)
REDDIT_CLIENT_ID="your-client-id"
REDDIT_CLIENT_SECRET="your-client-secret"
REDDIT_USER_AGENT="tech-news-aggregator/1.0"

# Scraping Schedule (cron format)
SCRAPE_SCHEDULE="0 */2 * * *"  # Every 2 hours
DIGEST_MORNING_SCHEDULE="0 8 * * *"  # 8 AM
DIGEST_EVENING_SCHEDULE="0 18 * * *"  # 6 PM

# Content Scoring Threshold (0-10 scale)
MIN_RELEVANCE_SCORE=7
